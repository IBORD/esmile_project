<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field" style="font-family: Arial, sans-serif; font-size: 25px;">
    <%= f.label :email, style: "color: white;" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "color: black;" %>
  </div>

  <div class="field" style="font-family: Arial, sans-serif; font-size: 25px;">
    <%= f.label :password, style: "color: white;" %><br />
    <%= f.password_field :password, autocomplete: "current-password", style: "color: black;"%>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
<p>
  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
</p>
<% end %>
<div>
  <p><%= render "devise/shared/links" %> </p>
</div>

